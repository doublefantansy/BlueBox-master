<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/item_title_bar" />

    <!--<TextView-->
        <!--style="@style/no_font_padding_text_view"-->
        <!--android:layout_marginLeft="@dimen/dp_22"-->
        <!--android:layout_marginTop="@dimen/dp_31"-->
        <!--android:text="拥有管理密码可以导入标注归档所有的图片和视频"-->
        <!--android:textColor="@color/color_333"-->
        <!--android:textSize="@dimen/text_size_14" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主机名称:" />

        <TextView
            android:textColor="@color/balck"
            android:id="@+id/hostName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬件类型:" />

        <TextView
            android:textColor="@color/balck"
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激活状态:" />

        <TextView
            android:textColor="@color/balck"
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="硬件SN:" />

        <TextView
            android:textColor="@color/balck"
            android:id="@+id/sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@color/main_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_23"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络:" />

        <TextView
            android:textColor="@color/balck"
            android:id="@+id/net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_bg" />


    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_29"
        android:text="管理密码"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_20" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_16">

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_input_bg"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_7"
            android:src="@mipmap/ic_eye" />

    </RelativeLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_30"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:bl_corners_radius="5dp"
        app:bl_solid_color="@color/myBlue"
        tools:ignore="MissingPrefix" />
</LinearLayout>