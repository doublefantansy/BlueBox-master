<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/serial_tv"
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_15"
        android:text="编号："
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/serial_num"
        android:layout_toRightOf="@+id/serial_tv"
        style="@style/no_font_padding_text_view"
        android:layout_marginTop="@dimen/dp_15"
        android:text="132456789"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/ic_right" />

    <TextView
        android:id="@+id/state"
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toLeftOf="@+id/right_iv"
        android:text="待读取"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serial_num"
        android:layout_marginTop="@dimen/dp_14">

        <ImageView
            android:id="@+id/first_image"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_123"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_weight="1"
            android:src="@mipmap/meinv" />

        <ImageView
            android:id="@+id/second_image"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_123"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_weight="1"
            android:src="@mipmap/meinv" />

        <ImageView
            android:id="@+id/third_image"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_123"
            android:layout_weight="1"
            android:src="@mipmap/meinv" />

    </LinearLayout>

</RelativeLayout>