<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/item_title_bar" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_31"
        android:gravity="center"
        android:text="提示：修改Wi-Fi名称或密码后，请重新连接Wi-Fi"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/main_bg" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_18"
        android:text="Wi-Fi名称"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_20" />

    <EditText
        android:id="@+id/wifi_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/ic_input_bg"
        android:paddingLeft="@dimen/dp_10" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_12"
        android:text="5G Wi-Fi名称：baoge360_5G"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_24"
        android:text="密码"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_15">

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_input_bg"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_7"
            android:src="@mipmap/ic_eye" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/save_or_restart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginBottom="@dimen/dp_100"
        android:background="@mipmap/ic_restart" />
</LinearLayout>