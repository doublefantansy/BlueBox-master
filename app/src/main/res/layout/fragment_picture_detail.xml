<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:src="@mipmap/meinv" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="标签"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/pic_tag"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="#游记"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="文件名"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/file_name"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="郊外.jpg"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="创建时间"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/create_time"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="2016/05/23 下午 17：35"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="尺寸"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/measure_size"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="750×500"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="大小"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/room_size"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="680.5KB"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="格式"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/format"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="JPEG"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            style="@style/no_font_padding_text_view"
            android:text="文件路径"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/path"
            style="@style/no_font_padding_text_view"
            android:layout_marginLeft="@dimen/dp_126"
            android:text="我的相册/游记"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>


</LinearLayout>