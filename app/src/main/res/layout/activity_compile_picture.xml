<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_353535"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:src="@mipmap/meinv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_140"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/tailor"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/selector_cut_iv" />

        <ImageView
            android:id="@+id/filter"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/selector_filter_iv" />

        <ImageView
            android:id="@+id/contrast"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/selector_contrast_iv" />

        <ImageView
            android:id="@+id/watermark"
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:src="@drawable/selector_watermark_iv" />

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="完成"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>


</LinearLayout>