<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_login_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:text="手机注册"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_20" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_89"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_44"
        android:background="@mipmap/ic_login_et">

        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/ic_user_avatar" />

        <EditText
            android:id="@+id/user_phone_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/avatar_iv"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textColor="@color/color_fff"
            android:textColorHint="@color/color_bacfe1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/pwd_iv"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_56"
            android:src="@mipmap/ic_login_pwd" />

        <EditText
            android:id="@+id/code_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_toRightOf="@+id/avatar_iv"
            android:background="@color/transparent"
            android:hint="请输入您的验证码"
            android:inputType="textPassword"
            android:textColor="@color/color_fff"
            android:textColorHint="@color/color_bacfe1"
            android:textSize="@dimen/text_size_16" />


    </RelativeLayout>

    <TextView
        android:id="@+id/get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:text="获取验证码"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_13" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_89"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@mipmap/ic_login_et">

        <ImageView
            android:id="@+id/first_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/ic_login_pwd" />

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/first_iv"
            android:background="@color/transparent"
            android:hint="输入密码"
            android:inputType="phone"
            android:textColor="@color/color_fff"
            android:textColorHint="@color/color_bacfe1"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:id="@+id/second_iv"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_56"
            android:src="@mipmap/ic_login_pwd" />

        <EditText
            android:id="@+id/consume_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_toRightOf="@+id/first_iv"
            android:background="@color/transparent"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="@color/color_fff"
            android:textColorHint="@color/color_bacfe1"
            android:textSize="@dimen/text_size_16" />


    </RelativeLayout>


    <Button
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_72"
        android:layout_marginRight="@dimen/dp_72"
        android:layout_marginTop="@dimen/dp_38"
        android:background="@mipmap/ic_login_submit"
        android:text="注册"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_18" />


    <TextView
        android:id="@+id/back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="返回密码登录"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_13" />


</LinearLayout>