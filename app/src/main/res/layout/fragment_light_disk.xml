<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:background="@color/mainColor">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/add"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/ic_more" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="归档"
                        android:textColor="@color/color_fff"
                        android:textSize="@dimen/text_size_17" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_input_disk" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/disk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_102">

                <ImageView
                    android:id="@+id/disk_iv"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_42"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_32"
                    android:src="@mipmap/ic_disk_bigger" />

                <TextView
                    android:id="@+id/disk_num"
                    style="@style/no_font_padding_text_view"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_toRightOf="@id/disk_iv"
                    android:text="编号：23456789"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/text_size_14" />

                <com.languang.bluebox.coustomview.CustomPercentView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_alignLeft="@+id/disk_num"
                    android:layout_marginTop="@dimen/dp_46"
                    android:layout_marginRight="@dimen/dp_20" />

                <TextView
                    style="@style/no_font_padding_text_view"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_66"
                    android:layout_toRightOf="@id/disk_iv"
                    android:text="已使用101.2G/300G"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_13" />

                <TextView
                    style="@style/no_font_padding_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_66"
                    android:layout_marginRight="@dimen/dp_27"
                    android:text="可用198.8G"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_13" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_36"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:id="@+id/statr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_171">

                <ImageView
                    android:id="@+id/record_iv"
                    android:layout_width="@dimen/dp_39"
                    android:layout_height="@dimen/dp_39"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_23"
                    android:src="@mipmap/ic_box" />

                <TextView
                    android:id="@+id/start_archive"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="@dimen/dp_31"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@drawable/bg_button_blue"
                    android:gravity="center"
                    android:text="启用归档"
                    android:textColor="@color/color_fff"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    style="@style/no_font_padding_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_86"
                    android:layout_marginRight="@dimen/dp_7"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="新标注154张照片/5个视频未光盘归档，需要光盘控件20G"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/main_bg" />

            <RelativeLayout
                android:id="@+id/recording_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_below="@id/statr"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_23"
                    android:src="@mipmap/ic_export_selected" />

                <TextView
                    android:id="@+id/display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_34"
                    android:layout_marginRight="@dimen/dp_14"
                    android:gravity="center"
                    android:text="光盘刻录中"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/content"
                    style="@style/no_font_padding_text_view"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_56"
                    android:layout_marginTop="@dimen/dp_86"
                    android:layout_marginRight="@dimen/dp_7"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="新标注154张照片/5个视频未光盘归档，需要光盘控件20G"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/text_size_14" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/content"
                    android:layout_margin="@dimen/dp_5"
                    android:max="100"
                    android:progress="0"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/progress_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progress_bar"
                    android:gravity="center" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="209dp"
                    android:background="@color/main_bg" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>