<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/color_fff"
        android:gravity="center"
        android:text="设备"
        android:textColor="@color/color_000"
        android:textSize="@dimen/text_size_17" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />


    <RelativeLayout
        android:id="@+id/my_wifi_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:background="@color/color_fff">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_49"
            android:layout_height="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_19"
            android:src="@mipmap/ic_wifi" />


        <TextView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@id/iv"
            android:text="我的Wi-Fi"
            android:textColor="@color/color_000"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/wifi"
            android:layout_below="@id/wifi"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/app_name"
            android:textColor="@color/color_333"
            android:textSize="@dimen/text_size_13" />


        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_33"
            android:src="@drawable/ic_right" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_bg" />


    <LinearLayout
        android:id="@+id/facility_info_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设备信息"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <ImageView

            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_22"
        android:background="@color/main_bg" />


    <LinearLayout
        android:id="@+id/disk_manage_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="硬盘管理"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <ImageView

            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_22"
        android:background="@color/main_bg" />


    <LinearLayout
        android:id="@+id/pwd_manage_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="管理密码"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <ImageView

            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_22"
        android:background="@color/main_bg" />


    <LinearLayout
        android:id="@+id/visitor_pwd_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="@color/color_fff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_22">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="访客密码"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_15" />

        <ImageView

            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_bg" />

    <TextView
        android:id="@+id/restart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@mipmap/ic_restart"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>