<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_6"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="214dp"
        android:layout_height="142dp"
        android:background="@drawable/ic_pop_add_picture"
        android:paddingLeft="@dimen/dp_9"
        >

        <LinearLayout
            android:id="@+id/file_ll"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/new_file_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/ic_add_file" />

            <TextView
                android:id="@+id/new_file_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="宝盒新增文件【200】"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_15" />
            
        </LinearLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/file_ll"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@color/main_bg" />

        <LinearLayout
            android:id="@+id/usb_ll"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/line1"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/usb_iv"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_3"
                android:src="@mipmap/ic_usb" />

            <TextView
                android:id="@+id/usb_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="USB"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/usb_ll"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@color/main_bg" />


        <LinearLayout
            android:id="@+id/album_ll"
            android:gravity="center_vertical"
            android:layout_below="@id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:id="@+id/photo_album_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_19"
                android:layout_below="@id/line2"
                android:src="@mipmap/ic_storage_choose" />

            <TextView
                android:id="@+id/photo_album_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="从手机相册选择"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
