<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_35">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_bg" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@mipmap/ic_sd_card" />

    <TextView
        android:id="@+id/sd_name"
        style="@style/no_font_padding_text_view"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@id/iv"
        android:text="名称：SD卡--"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/room_reduce"
        style="@style/no_font_padding_text_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_16"
        android:text="已使用101.2G/256G"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_15" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/room_reduce"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/main_bg" />

    <com.languang.bluebox.coustomview.CustomPercentView
        android:id="@+id/custom_percent_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@id/line"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16" />

    <Button
        android:id="@+id/browse"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_below="@id/custom_percent_view"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_button_blue"
        android:text="浏览"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_15" />

    <Button
        android:id="@+id/export_all"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@id/custom_percent_view"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toLeftOf="@id/browse"
        android:background="@drawable/bg_button_blue"
        android:text="全部导入"
        android:textColor="@color/color_fff"
        android:textSize="@dimen/text_size_15" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/export_all"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/main_bg" />

</RelativeLayout>